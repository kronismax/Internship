<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TaskNames" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:paddingTop">@dimen/text_padding</item>
        <item name="android:paddingBottom">@dimen/text_padding</item>

    </style>

    <style name="TaskDates" parent="TaskNames">
        <item name="android:textColor">?android:textColorSecondary</item>

    </style>

    <style name="View" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_marginTop">@dimen/view_margin</item>
        <item name="android:layout_marginBottom">@dimen/view_margin</item>
        <item name="android:background">@color/viewBackground</item>
        <item name="android:layout_height">2dp</item>

    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="MyCustomTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="LikeTextView">
        <item name="android:drawableLeft">@drawable/ic_like</item>
        <item name="android:drawablePadding">@dimen/like_drawable_padding</item>
        <item name="android:drawableStart">@drawable/ic_like</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorLike</item>
        <item name="android:textSize">@dimen/like_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppealTitleTextView">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="AppealDateTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">@dimen/view_margin</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
</resources>
